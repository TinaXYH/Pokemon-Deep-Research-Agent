# Test environment variables for Pokemon Deep Research Agent
# This file is loaded by conftest.py during test execution

# API Configuration (use test/mock values)
OPENAI_API_KEY=test-api-key-for-testing
OPENAI_API_BASE=https://api.openai.com/v1

# LLM Configuration (optimized for testing)
LLM_MODEL=gpt-4.1-mini
LLM_MAX_TOKENS=100
LLM_TEMPERATURE=0.0
LLM_CACHE=false

# Pokemon API Configuration
POKEAPI_BASE_URL=https://pokeapi.co/api/v2/
POKEAPI_RATE_LIMIT=0.0
POKEAPI_MAX_CONCURRENT=1

# System Configuration
ENVIRONMENT=test
CACHE_DIR=tests/cache
QUERY_TIMEOUT=30

# Logging (reduce noise during testing)
LOGGING_LEVEL=ERROR

# Python Configuration
PYTHONPATH=/app/src
PYTHONDONTWRITEBYTECODE=1
PYTHONUNBUFFERED=1

