# Pokemon Deep Research Agent - Environment Configuration
# Copy this file to .env and configure your settings

# =============================================================================
# API Configuration
# =============================================================================

# OpenAI API Configuration (Required)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_API_BASE=https://api.openai.com/v1

# LLM Model Configuration
LLM_MODEL=gpt-4.1-mini
LLM_MAX_TOKENS=4000
LLM_TEMPERATURE=0.7

# =============================================================================
# Pokemon API Configuration
# =============================================================================

# Pok√©API Configuration
POKEAPI_BASE_URL=https://pokeapi.co/api/v2/
POKEAPI_RATE_LIMIT=0.1
POKEAPI_MAX_CONCURRENT=10

# =============================================================================
# System Configuration
# =============================================================================

# Environment
ENVIRONMENT=development

# Caching
CACHE_DIR=data/cache
LLM_CACHE=true

# Vector Memory System
MEMORY_DIR=data/memory
EMBEDDING_MODEL=text-embedding-3-small
MAX_MEMORY_ENTRIES=10000
SIMILARITY_THRESHOLD=0.7

# Timeouts
QUERY_TIMEOUT=300

# =============================================================================
# Logging Configuration
# =============================================================================

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOGGING_LEVEL=INFO

# =============================================================================
# Development Configuration
# =============================================================================

# Python Path (for Docker)
PYTHONPATH=/app/src

# Python Settings
PYTHONDONTWRITEBYTECODE=1
PYTHONUNBUFFERED=1

# =============================================================================
# Application Metadata
# =============================================================================

APP_NAME=Pokemon Deep Research Agent
APP_VERSION=1.0.0
APP_DESCRIPTION=Multi-agent system for comprehensive Pokemon research and analysis

